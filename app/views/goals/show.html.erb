<H1>Goal Show Page</H1>

<ul>
<% @goal.attributes.each do |k, v| %>
  <%= "<li>#{h(k.capitalize)} : #{h(v)}</li>".html_safe if v %>
<% end %>
</ul>

<% if current_user.id == @goal.user_id %>
  <%= button_to "Edit Goal", edit_goal_url(@goal), method: :get %><BR>
  <%= button_to "Delete Goal", goal_url(@goal), method: :delete %>
<% end %>
